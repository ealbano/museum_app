<%= form_for @painting do |f| %>
  <div class='field'>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>

  <div class='field'>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class='field'>
    <%= f.label :museum %>
    <%= f.collection_select(:museum_id, Museum.all, :id, :name, :prompt => 'Select')  %>
  </div>

  <div class='field'>
    <%= f.label :artist %>
    <%= f.collection_select(:artist_id, Artist.all, :id, :name, :prompt => 'Select')  %>
  </div>

  <div class="field">
    <%= f.submit %>
  </div>

<% end %>
